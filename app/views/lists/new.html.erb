<h1>映画リスト投稿</h1>
<%= form_with model: @list, local:true do |f| %>
  <h4>リストトップ画像</h4>
  <%= f.attachment_field :image %>
  <h4>リストタイトル</h4>
  <%= f.text_field :list_title %>
  <!--<h4>ジャンル</h4>-->
  <%= f.label :category, 'ジャンル' %>
  <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
    <%= category.label do %>
      <%= category.check_box %>
      <%= category.text %>
    <% end %>
  <% end %>
  <h4>リスト説明文</h4>
  <%= f.text_area :description %>
  <%= f.submit '投稿' %>
<% end %>