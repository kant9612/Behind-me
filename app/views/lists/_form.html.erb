<%= form_with model: list, local: true do |f| %>
  <div class="form-group"><label>リストタイトル</label><br>
    <%= f.text_field :list_title, class: "form-control" %></div>
  <div class="form-group"><label>リスト説明文</label><br>
    <%= f.text_area :description, class: "form-control" %></div>
  <!--ここにコメントのように映画リストを追加する-->
  <div class="actions">
    <%= f.submit '完了', class: "btn btn-success col-xs-12" %>
  </div>
<% end %>