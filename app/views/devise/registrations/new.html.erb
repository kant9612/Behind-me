<%= render "layouts/logo" %>

<h2><span>新規会員登録</span></h2>

<div class="row justify-content-center">
  <div class="col-md-3 mt-5">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %><br />
        <%= f.text_field :name, autofocus: true, class:"form-control", placeholder:"鈴木太郎" %>
      </div>

      <div class="field mt-3">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"abc@amail.com" %>
      </div>

      <div class="field mt-3">
        <%= f.label :パスワード %>
        <% if @minimum_password_length %>
        (<%= @minimum_password_length %>文字以上)
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="field mt-3">
        <%= f.label :パスワード（確認用） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control" %>
      </div>

      <div class="actions mt-3 row justify-content-center">
        <%= f.submit "　登録完了", class:"btn_base text_base" %>
      </div>
    <% end %>

    <div class="row justify-content-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>