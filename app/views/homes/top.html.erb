<% if user_signed_in? %>
<div class="container">
	<div class="row">
		<div class="col-md-3 offset-md-3">
			<%= link_to "マイページへ", user_path(current_user.id), class: "btn btn-md text_base btn_base" %>
		</div>
		<div class="">
			<%= link_to "映画リスト一覧へ", lists_path, class: "btn btn-md text_base btn_base" %>
		</div>
	</div>
	<div class="text_base mt-3">
		<h4 class=""><span>人気ムービーリスト</span></h4>
			<% @lists.each do |list| %>
				<div class="top_rank mypage_list">
					<div class="media mt-3">
      		  <div class="d-flex m-3"><%= attachment_image_tag list, :image, size: "150x100", fallback: "no_image.jpg" %></div>
      		  <div class="media-body">
      		    <h5 class="mt-3"><%= link_to list.list_title, list_path(list.id), class:"text_base" %></h5>
      		    <div>by <%= list.user.name %></div>
      		    <% list.categories.each do |category| %>
      		      <div class="badge badge-secondary">
      		        <%= category.name %>
      		      </div>
      		    <% end %>
      		      <div>
      		        <%= list.description %>
      		      </div>
      		  </div>
      		</div>
      		<div class="d-flex ml-3">
      		  <div class="response like-btn_<%= list.id %>"><%= render partial: "likes/like-btn", locals: { list: list} %></div>
      		  <div class="response favorite-btn_<%= list.id %>"><%= render partial: 'favorites/favorite-btn', locals: { list: list} %></div>
      		  <div class="response">コメント：<%= list.list_comments.count %> 件</div>
      		</div>
      	</div>
			<% end %>
			<div class="row justify-content-center mt-5">
				<div class="text-center">
					<!--pagenate-->
      		<%= paginate @lists %>
				</div>
			</div>

	</div>
</div>
<% else %>
	<div id="testbox">
		<div id="testimages">
			<div class="testimage1"></div>
			<div class="testimage2"></div>
			<div class="testimage3"></div>
		</div>

	</div>
	<div class="row mt-2">
		<div class="col-sm-2 offset-sm-4">
			<%= link_to "Log in", new_user_session_path, class: "btn btn-sm text_base btn_base" %>
		</div>
		<div class="col-sm-2">
			<%= link_to "Sign Up", new_user_registration_path, class: "btn btn-sm text_base btn_base" %>
		</div>
	</div>
<% end %>