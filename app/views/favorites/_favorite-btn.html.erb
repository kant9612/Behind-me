<% if list.favorited_by?(current_user) %>
  <%= link_to list.favorites.count, list_favorites_path(list), method: :delete, class: "fas fa-bookmark bookmark_done", remote:true %>
<% else %>
  <%= link_to list.favorites.count, list_favorites_path(list), method: :post, class: "far fa-bookmark bookmark_notyet", remote:true %>
<% end %>